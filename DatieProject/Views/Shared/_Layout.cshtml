    <center style="margin-top: 16px">
        <p>&copy; @DateTime.Now.Year - Datie Management (c) - CuongHH - ThaiTC - ThienNLH - Class SE0870A - SAD</p>
    </center>
</div>*@
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/Datatables")
@Scripts.Render("~/bundles/blockUI")
@Scripts.Render("~/bundles/bootbox")
@Scripts.Render("~/bundles/numberic")
@Scripts.Render("~/bundles/Material")
@Scripts.Render("~/bundles/GalleryBody")
@Scripts.Render("~/bundles/jqueryval")
@RenderSection("scripts", false)
<script type="text/javascript">
    $(window).scroll(function() {
        if ($(window).scrollTop() + $(window).height() === $(document).height()) {
            $("#nav-bottom").addClass("hide");
        } else {
            $("#nav-bottom").removeClass("hide");
        }
    });
</script>
</body>
</html>